    </tr>

    <!-- Fila 02 -->
    <tr>
        <td style="width: 10%; height: 1px"><img src="@Request.MapPath("~\\content\\pixel.png")" width="100" height="1" /></td>
        <td style="width: 10%; height: 1px"><img src="@Request.MapPath("~\\content\\pixel.png")" width="100" height="1" /></td>
        <td style="width: 40%; height: 1px" colspan="4"><div class="alert alert-info center-block" style="text-align: center">Nuevo Seguimiento [@Model.Item1.Fecha]</div></td>
        <td style="width: 10%; height: 1px"><img src="@Request.MapPath("~\\content\\pixel.png")" width="100" height="1" /></td>
        <td style="width: 10%; height: 1px"><img src="@Request.MapPath("~\\content\\pixel.png")" width="100" height="1" /></td>
    </tr>

    <!-- Fila 03 -->
    <tr>
        <td style="width: 10%; height: 1px"><img src="@Request.MapPath("~\\content\\pixel.png")" width="100" height="1" /></td>
        <td style="width: 10%; height: 1px"><img src="@Request.MapPath("~\\content\\pixel.png")" width="100" height="1" /></td>
        <td style="width: 40%; height: 1px" colspan="4">
            <div class="btn-group btn-group-justified btn-group-sm" role="group" aria-label="...">
                <div class="btn-group" role="group">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Variación
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        @foreach (var cambio in Model.Item1.Cambios)
                        {
                            if (cambio.Value < 0)
                            {
                                <li class="list-group-item"><span class="badge">@cambio.Value.ToString("00")</span>@funciones.ObtenerPorId(cambio.Key).Descripcion</li>
                            }
                            else
                            {
                                <li class="list-group-item"><span class="badge">+@cambio.Value.ToString("00")</span>@funciones.ObtenerPorId(cambio.Key).Descripcion</li>
                            }
                        }
                    </ul>
                </div>
                <div class="btn-group" role="group">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Valores
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        @foreach (var cambio in Model.Item2.Cambios)
                        {
                            if (cambio.Value < 0)
                            {
                                <li class="list-group-item"><span class="badge">@cambio.Value.ToString("00")</span>@funciones.ObtenerPorId(cambio.Key).Descripcion</li>
                            }
                            else
                            {
                                <li class="list-group-item"><span class="badge">+@cambio.Value.ToString("00")</span>@funciones.ObtenerPorId(cambio.Key).Descripcion</li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </td>
        <td style="width: 10%; height: 1px"><img src="@Request.MapPath("~\\content\\pixel.png")" width="100" height="1" /></td>
        <td style="width: 10%; height: 1px"><img src="@Request.MapPath("~\\content\\pixel.png")" width="100" height="1" /></td>
