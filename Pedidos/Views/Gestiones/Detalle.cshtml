@model Pedidos.ViewModels.GestionesDetalleVM

@{
    ViewBag.Title = String.Format("Gestión {0}", Model.GestionId);
}

<br />
<h2>@ViewBag.Title</h2>

<div>
    <br />
    <h4>Detalle</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.GestionId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GestionId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaGestion)
        </dt>

        <dd>
            @Model.FechaGestion.ToShortDateString()
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ClienteId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClienteId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Observaciones)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Observaciones)
        </dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Modificar", "Modificacion", new { id = Model.GestionId, VolverA = Model.VolverA }, new { @class = "btn btn-primary" })
    <a href="@Model.VolverA" class="btn btn-default">Volver al Listado</a>
</p>
<br />